@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<style>
    body {
        background-color: #f0f3f5; 
    }

    .card {
       
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
     
    }

        .btn-login:hover {
            background-color: #45a049; 
            border-color: #45a049;
        }

    .btn-primary {
        background-color: #007bff; 
        border-color: #007bff;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }
</style>

<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h2 class="text-center mb-4">@ViewData["Title"]</h2>


                    <form id="account" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                            <label asp-for="Input.Email">Email</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password" type="password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                            <label asp-for="Input.Password">Password</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <div class="form-check mb-3">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            <label class="form-check-label" asp-for="Input.RememberMe" >Remember me</label>
                        </div>

                        <button id="login-submit" type="submit" class="w-100 btn btn-primary" >Log in</button>


                        <div class="mt-3">
                          
                            <p>
                                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" style="color: #007bff;">Register as a new user</a>
                            </p>
                           
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}